
    <h3>編集</h3>
    <%= form_tag("/memos/"+@memo.id.to_s,:method=>:patch) do%>
        <div class="form-group">
            <%= label_tag "form-title", "タイトル" %>
            <%= text_field :memos, :title, id:"form-title", class:"form-control",value: @memo.title%>
        </div>
        <div class="form-group">
            <%= label_tag "form-content", "内容" %>
            <%= text_field :memos, :body, id:"form-content", class:"form-control",value: @memo.body%>
        </div>
        <div class="form-group">
            <%= label_tag "form-category", "カテゴリ" %>
            <%= select_tag 'memos[category_id]', options_from_collection_for_select(@categories, :id, :name),id:"form-category",class:"form-control" %>
　　　　</div>
        <%= submit_tag "更新",class:"btn btn-primary"%>
    <% end %>
